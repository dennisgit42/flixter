<br />
<div class="booyah-box col-10 offset-1">
  <h1>Add a new lesson</h1>
  <br />
    <%= simple_form_for @lesson, url: instructor_section_lessons_path(current_section) do |f| %>
      <%= f.input :title %>
      <%= f.input :subtitle %>
      <%= f.input :video, label: "Please upload a lecture video for this course:" %>
      <%= f.submit "Create new lesson" %>
      <br /><br />
    <% end %>
</div>